<Page xmlns="http://schemas.nativescript.org/tns.xsd"
 xmlns:ui="@nativescript/mlkit-core" loaded="onLoaded" navigatedTo="onNavigatedTo">
<Page.actionBar>
    <ActionBar class="action-bar" >
        <Label text="Face Detection" class="title" />
    </ActionBar>
</Page.actionBar>

<ScrollView>
 <StackLayout class="p-20">
    <Label text="Make Payment" class="h2 text-2xl font-bold text-center mb-10" color="#000" />
    <ui:MLKitView
    detectionType="face"
    detection="onDetection"
    id="mlkitView"
    retrieveLatestImage="true"
    cameraPosition="front"

    />
   <Label text="{{'facedata : ' + facedata}}" textWrap="true" />



  </StackLayout>
  </ScrollView>

</Page>
